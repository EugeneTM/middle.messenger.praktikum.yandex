{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "nodenext",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": [
    "src",
    "types.d.ts",
    "hbs.d.ts",
    "server.js",
    "vite.config.ts"
  ]
}
